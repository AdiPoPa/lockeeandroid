<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_register">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/listIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/lockicon"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="nickname"
        android:textColor="@color/white"
        android:id="@+id/nicknameText"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/listIcon"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="shareID"
        android:textColor="@color/input_login_hint"
        android:id="@+id/shareIDText"
        android:layout_below="@+id/listIcon"
        android:layout_alignStart="@+id/nicknameText" />
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="status"
        android:textColor="@color/input_login_hint"
        android:id="@+id/statusText"
        android:layout_above="@+id/shareIDText"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp" />
</RelativeLayout>
